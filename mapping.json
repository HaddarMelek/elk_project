{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "folding": {
          "tokenizer": "standard",
          "filter": ["lowercase","asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id_post":    { "type": "keyword" },
      "titre":      { "type": "text", "analyzer": "folding" },
      "texte":      { "type": "text", "analyzer": "folding" },
      "langue":     { "type": "keyword" },
      "type":       { "type": "keyword" },
      "sentiment":  { "type": "keyword" },
      "score":      { "type": "float" },
      "date":       { "type": "date", "format": "strict_date_optional_time||epoch_millis" },
      "source":     { "type": "keyword" }
    }
  }
}
